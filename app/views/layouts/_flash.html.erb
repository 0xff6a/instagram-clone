<section class="container">
	<% if flash[:notice] %>
		<div class="alert alert-success" role="alert">
			<strong><%= flash[:notice] %><strong>
		</div>
	<% end %>
	<% if flash[:errors] %>
		<% flash[:errors].each do |error| %>
			<div class="alert alert-danger" role="alert">
				<strong><%= error.flatten[1] %></strong>
			</div>
		<% end %>
	<% end %>
</section>