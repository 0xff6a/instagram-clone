<article class="post col-sm-6 col-md-4">
	<div class="panel panel-default">
		<header class='panel-heading'>
			<h3 class='panel-title map-title'> <%=post.title%> </h3>
		</header>
		<div class='panel-body'>
			<% if post.picture.present? %>
				<%= link_to post_picture_path(post), class: 'large-image-link' do %>
					<%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
				<% end %><br/>
			<% end %>
		</div>
		<footer>
			<section class='tag container'>
				<% post.tags.each do |tag| %>
					<%= link_to tag.text, tag, class:'post-tag' %>
				<% end %>
			</section>
			<p>
				<em>Posted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.email %></em>
				<br />
				<%=link_to post.location, post_map_path(post) %>
			</p>
		</footer>
		<div class="panel-footer">
			<em> Starting at just Â£5.00</em>
			<% if current_user %>
				<%= link_to 'Purchase', new_post_picture_purchase_path(post), class: 'btn btn-warning btn-sm' %>
			<% end %>
		</div>
	</div>
</article>