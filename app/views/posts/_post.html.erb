<div class="post col-sm-6 col-md-4">
	<h3 class='post-title'> <%=post.title%> </h3>
	<% if post.picture.present? %>
		<a class='large-image-link' href=<%= post.picture.url() %>>
			<%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
		</a><br/>
	<% end %>
	<% post.tags.each do |tag| %>
		<%= link_to tag.text, tag, class:'post-tag' %>
	<% end %>
	<p>
		<em>Posted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.email %></em>
	</p>
</div>